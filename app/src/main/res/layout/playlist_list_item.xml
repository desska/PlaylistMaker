<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_16"
        android:background="@drawable/mini_rounded_rect"
        android:clipToOutline="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxWidth="300dp"
        android:maxLines="1"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/track_item_normal_text_size"
        app:layout_constraintBottom_toTopOf="@id/center"
        app:layout_constraintLeft_toRightOf="@id/cover"
        tools:text="Smells like teeeeeeeeen speerererhhhhhhhhhhhhhhhhhhhhhhhhhhhhhsdfsdfsdfasdasdasd" />

    <TextView
        android:id="@+id/qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:textColor="?attr/customTextColor"
        android:textSize="@dimen/track_item_small_text_size"
        app:layout_constraintLeft_toRightOf="@id/cover"
        app:layout_constraintTop_toBottomOf="@id/center"
        tools:text="10 треков" />

</androidx.constraintlayout.widget.ConstraintLayout>