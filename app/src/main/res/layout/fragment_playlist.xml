<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:paddingBottom="70dp">

    <android.widget.Button
        android:id="@+id/create_list"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_24"
        android:background="@drawable/rounded_update_button"
        android:fontFamily="@font/ys_display_medium"
        android:paddingHorizontal="@dimen/margin_16"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textColor="?attr/colorSecondary"
        android:textFontWeight="500"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/error_msg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:src="@drawable/not_found_error"
        android:visibility="gone"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/error_msg_text"
        style="@style/mediaErrorMsgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:maxWidth="210dp"
        android:singleLine="false"
        android:visibility="gone"
        tools:text="@string/empty_playlist_error"
        tools:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        tools:itemCount="5"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/playlist_item"
        tools:orientation="vertical"
        tools:spanCount="2" />

</LinearLayout>