<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context="com.practicum.playlistmaker.media.ui.MediaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/media_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <TextView
            style="@style/MainToolbarTextView"
            android:text="@string/media_title" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabBackground="?attr/colorSecondary"
        app:tabPaddingEnd="@dimen/margin_16"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorColor="?attr/colorOnSecondary"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="?attr/colorOnSecondary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>


